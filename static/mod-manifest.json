{
    "apiVersion": "1.2",
    "version": "1.0",
    "name": "Mod Plotly Splom",
    "id": "js-plotly-splom", 
    "icon": "icon.svg",
    "properties": [  
        {
            "name": "plotlySettings",
            "type": "string",
            "defaultValue": "-"
        },
        {
            "name": "editorSettings",
            "type": "string",
            "defaultValue": "-"
        }
    ],    
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "X",
                "mode": "dual",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis"
                }
            },
            {
                "name": "Y",
                "mode": "continuous", 
                "placement": "left"
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        // "bundle.js",
        "bootstrap.4.1.2.css"
    ]
}